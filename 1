#include <iostream>
using namespace std;

int Rrr(int arr[],int size)
{
    int* pa;
    int temp;
    
    if (size % 2 != 0)
    {
        cout << "Массив должен быть с четным количеством индексов";
        return 0;
    }
    else
    {
        for (int i = 0; i < size; i++)
        {
            if (i % 2 == 0)
            {
                pa = &(arr[i]);
                temp = (arr[i + 1]);
                arr[i + 1] = *pa;
                arr[i] = temp;
            }

        }
    }
    
    for (int i = 0; i < size; i++)
    {
        cout << arr[i];
    }
}

int main()
{
    setlocale(LC_ALL, "rus");
    int arr[6] = {0,1,2,3,4,5};
    int size = sizeof(arr) / sizeof(arr[0]);
    Rrr(arr,size);
    
    
}
