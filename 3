#include <iostream>
using namespace std;

void Rrr(int arr[],int arr2[],int size)
{
    int arr3[12];
    int* pa;
    int* pb;
    for (int i = 0; i < size; i++)
    {
        pa = &arr[i];
        arr3[i] = *pa;
        if (i == 5)
        {
            for (int j = 0; j < size; j++)
            {
                pb = &arr2[j];
                arr3[i+1] = *pb;
                i++;
            }
            
        }
    }
    for (int i = 0; i < 12; i++)
    {
        cout << arr3[i] << " ";
    }
}
int main()
{
    setlocale(LC_ALL, "rus");
    int arr[6] = { 0,1,2,3,4,5 };
    int arr2[6] = { 6,7,8,9,10,11 };
    int size = sizeof(arr) / sizeof(arr[0]);
    Rrr(arr,arr2,size);
    
    
}
